<%= form_for(resource, as: resource_name, url: user_session_path(resource_name), html: { class: "form signup" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, placeholder: "person@example.com", autocomplete: "email" %>
    <p class='error'><%= show_errors(resource, :email) %></p>
  </div>

  <div class="field">
    <%= f.label :password do %>
      Password
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <p class='error'><%= show_errors(resource, :password) %></p>
  </div>

  <div>
    <%= f.submit "Sign In", class: "submit-btn" %>
  </div>
<% end %>

