<section class="auth">
  <div class="auth-content">
    <div class="profile-pic"></div>
    <div class="auth-links">
      <%= link_to 'Login', new_user_registration_path %>
      <%= link_to 'Sign Up', new_user_registration_path, class: 'active' %>
    </div>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form signup" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

       <div class="field">
        <%= f.label :full_name %>
        <%= f.text_field :full_name, autofocus: true, placeholder: "John Doe", autocomplete: "email" %>
      </div>
      
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, placeholder: "person@exaple.com", autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password do %>
          Password
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div>
        <%= f.submit "Sign up", class: "submit-btn" %>
      </div>
    <% end %>
  </div>
</section>
