<%# <section class="auth">
  <div class="auth-content">
    <div class="profile-pic"></div> %>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form signup" }) do |f| %>
       <div class="field">
        <%= f.label :username %>
        <%= f.text_field :username, autofocus: true, placeholder: "johndoe123" %>
        <p class='error'><%= show_errors(resource, :username) %></p>
      </div>
      
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, placeholder: "person@example.com", autocomplete: "email" %>
        <p class='error'><%= show_errors(resource, :email) %></p>
      </div>

      <div class="field">
        <%= f.label :password do %>
          Password
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <p class='error'><%= show_errors(resource, :password) %></p>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        <p class='error'><%= show_errors(resource, :password_confirmation) %></p>
      </div>

      <div>
        <%= f.submit "Sign up", class: "submit-btn" %>
      </div>
    <% end %>
  <%# </div>
</section> %>
